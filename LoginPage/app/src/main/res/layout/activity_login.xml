<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/reflection">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/Login"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:background="@drawable/layout_r"
            android:layout_gravity="center"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintVertical_bias="0.497">

            <TextView
                android:id="@+id/txtv_LoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="350dp"
                android:background="@drawable/change_page_style_txtv"
                android:text="Login Page"
                android:paddingHorizontal="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/Login_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="400dp"
                android:text="Login"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:cornerRadius="?android:attr/windowTitleSize"
                app:icon="@android:drawable/ic_lock_lock"
                app:iconTint="@color/teal_200"
                app:iconTintMode="src_atop"
                app:strokeColor="@color/design_default_color_error"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/txtv_SignupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="160dp"
                android:background="@drawable/txtview_r"
                android:text="SignUp Page"
                android:paddingHorizontal="10dp"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/etxt_UserName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="225dp"
                android:background="@drawable/eittxt_r"
                android:hint="Enter Username"
                android:inputType="text"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etxt_Password"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="280dp"
                android:background="@drawable/eittxt_r"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/avatar_imv"
                android:layout_width="93dp"
                android:layout_height="84dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/avatar"
                style="@style/Animation.Design.BottomSheetDialog" />

        </FrameLayout>
        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />-->
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>